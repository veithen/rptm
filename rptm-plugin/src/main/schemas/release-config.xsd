<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="urn:rptm.code.google.com:release:config" xmlns="urn:rptm.code.google.com:release:config" elementFormDefault="qualified">
    <xsd:element name="releaseConfig">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="distribution" type="distribution" minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:complexType name="distribution">
        <xsd:sequence>
            <xsd:element name="artifactId" type="xsd:string"/>
            <xsd:element name="classifier" type="xsd:string" minOccurs="1"/>
            <xsd:element name="type" type="xsd:string" minOccurs="1"/>
            <xsd:element name="distributionType" type="distributionType" default="other"/>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:simpleType name="distributionType">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="source"/>
            <xsd:enumeration value="binary"/>
            <xsd:enumeration value="other"/>
        </xsd:restriction>
    </xsd:simpleType>
</xsd:schema>
